# ==================== CONFIGURACIÓN DEL SERVIDOR ====================
HOST=0.0.0.0
PORT=8000
DEBUG=True

# ==================== CORS ====================
# Separar múltiples orígenes con comas
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5500,http://localhost:8080

# ==================== MODELO DE EMBEDDINGS ====================
# Modelos disponibles:
# - all-MiniLM-L6-v2 (rápido, 384 dimensiones)
# - paraphrase-multilingual-MiniLM-L12-v2 (multilenguaje, 384 dimensiones)
# - all-mpnet-base-v2 (mejor calidad, 768 dimensiones, más lento)
MODEL_NAME=all-MiniLM-L6-v2

# ==================== THRESHOLDS DE VALIDACIÓN ====================
# Umbral para calificación "Excelente" (0.0 - 1.0)
SIMILARITY_THRESHOLD_EXCELLENT=0.9

# Umbral para calificación "Bueno/Correcto" (0.0 - 1.0)
SIMILARITY_THRESHOLD_GOOD=0.7

# Umbral para calificación "Aceptable" (0.0 - 1.0)
SIMILARITY_THRESHOLD_ACCEPTABLE=0.5

# ==================== CONFIGURACIÓN DE CHUNKING ====================
# Tamaño de chunk por defecto (en caracteres)
DEFAULT_CHUNK_SIZE=500

# Overlap entre chunks (en palabras)
DEFAULT_CHUNK_OVERLAP=50

# Tamaño mínimo de documento (aprox 80 páginas = 200,000 caracteres)
MIN_DOCUMENT_SIZE=200000

# ==================== BASE DE DATOS (PRODUCCIÓN) ====================
# Descomentar y configurar para usar PostgreSQL en producción
# DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/recuiva

# ==================== SEGURIDAD ====================
# Secret key para JWT (en producción, usar una clave segura aleatoria)
# SECRET_KEY=tu-clave-secreta-aqui-cambiar-en-produccion

# ==================== LOGGING ====================
# Nivel de logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==================== LÍMITES ====================
# Tamaño máximo de archivo (en MB)
MAX_FILE_SIZE_MB=50

# Número máximo de chunks por material
MAX_CHUNKS_PER_MATERIAL=1000
